@model Rocky.Models.Product

<form method="post">
   <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" disabled class="form-control" />

                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" disabled class="form-control" />

                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" disabled class="form-control" id="summernote"> </textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category.Name" disabled class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <button type="submit" class="btn btn-danger w-100" value="Delete">Delete</button>
                    </div>
                    <div class="col">
                        <a class="btn btn-success w-100" asp-action="Index">Back</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 p-3">
            @* Keep this empty *@

            @if (Model.Id != 0)
            {
                <img src="@Constants.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
            }
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
    <script>

            $(document).ready(function () {
                $('#summernote').summernote({
                    height: 250,
                    disable: true,
                });
            });

    </script>
}

