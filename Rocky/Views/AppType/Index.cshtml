@model IEnumerable<Rocky.Models.AppType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Types</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="AppType" asp-action="Create">
                <i class="fas fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
    </div>
</div>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <tr>
            <th>
                App Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td width="30%">
                        <div class="text-center">
                            <div class="btn-group w-75" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="AppType" asp-route-Id="@obj.Id" asp-action="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger mx-2" asp-controller="AppType" asp-route-Id="@obj.Id" asp-action="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Apps exist.</p>
}
